<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/dark_gray" />
            <stroke android:width="1dp"
                    android:color="@color/cw_light_gray" />
            <corners android:radius="10dp" />
            <padding android:left="5dp"
                     android:top="2dp"
                     android:right="5dp"
                     android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/dark_gray"
                      android:endColor="@color/cw_light_gray"
                      android:angle="270" />
            <stroke android:width="1dp"
                    android:color="@color/cw_light_gray" />
            <corners android:radius="10dp" />
            <padding android:left="5dp"
                     android:top="2dp"
                     android:right="5dp"
                     android:bottom="2dp" />
        </shape>
    </item>
</selector>