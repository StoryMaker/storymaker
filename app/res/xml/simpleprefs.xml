<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Networking &amp; Security">
	    <EditTextPreference android:title="StoryMaker Server" android:summary="server for hosting all lesson and story content" android:key="pserver" android:defaultValue="https://storymaker.cc" android:enabled="true"/>
	    
	   <CheckBoxPreference android:title="Use Orbot (Tor)" android:summary="Send all network traffic through the Tor network (https://torproject.org)" android:key="pusetor"/>
	
	<EditTextPreference android:title="YouTube Account" android:summary="the YouTube account to use for video uploads. This MUST be registered on your device." android:key="youTubeUserName" android:enabled="true"/>
		<CheckBoxPreference android:title="YouTube Login" android:summary="Use YouTube web authentication" android:key="pyoutubewebauth"/>
	
	<EditTextPreference android:title="SoundCloud Account" android:summary="the SoundCloud account to use for audio uploads" android:key="soundCloudUserName" android:enabled="true"/>
	    
	</PreferenceCategory>
	<PreferenceCategory android:title="Locales">
		<CheckBoxPreference android:title="Enable Arabic mode" android:key="plocalear"/>
		<EditTextPreference android:title="Custom Lesson Location" android:summary="shortcode or URL to custom lesson location" android:key="plessonloc" android:enabled="true"/>
		
	</PreferenceCategory>
	
	<PreferenceCategory android:title="Media">
		<EditTextPreference android:title="Slide Duration" android:summary="Duration of each slide in a photo essay" android:key="pslideduration" android:defaultValue="5" android:enabled="true"/>
	
	<CheckBoxPreference android:title="Enable Compression" android:summary="compress all video and audio using the settings below" android:key="pcompress" android:defaultValue="false"/>
	<CheckBoxPreference android:title="Preprocess 3GP" android:summary="convert 3GP video clips to MPEG-4" android:key="p_preconvert_mp4" android:defaultValue="false"/>
	<CheckBoxPreference android:title="Use 'Cat' Command" android:summary="Use 'cat' command to merge videos" android:key="p_use_cat" android:defaultValue="false"/>
	
		<EditTextPreference android:title="Video Codec" android:summary="Export video codec" android:key="p_video_codec" android:defaultValue="mpeg4" android:enabled="true"/>
		
		<EditTextPreference android:title="Video Width" android:summary="Export video width" android:key="p_video_width" android:defaultValue="720" android:enabled="true"/>
		<EditTextPreference android:title="Video Height" android:summary="Export video height" android:key="p_video_height" android:defaultValue="480" android:enabled="true"/>
		
		<EditTextPreference android:title="Video Bitrate" android:summary="Export video bitrate (kbps)" android:key="p_video_bitrate" android:defaultValue="1000" android:enabled="true"/>
		<EditTextPreference android:title="Video Framerate" android:summary="Export frame rate per second (fps)" android:key="p_video_framerate" android:defaultValue="29.97" android:enabled="true"/>
	
		<EditTextPreference android:title="Audio Codec" android:summary="Export audio codec" android:key="p_audio_codec" android:defaultValue="aac" android:enabled="true"/>
		
		<EditTextPreference android:title="Audio Bitrate" android:summary="Export audio bitrate (kbps)" android:key="p_audio_bitrate" android:defaultValue="128" android:enabled="true"/>
		<EditTextPreference android:title="Audio Samplerate" android:summary="Default audio record sample rate (khz)" android:key="p_audio_samplerate" android:defaultValue="22050" android:enabled="true"/>
	
		<EditTextPreference android:title="Audio Crossfade" android:summary="Default audio cross fade length" android:key="p_audio_xfade_len" android:defaultValue=".5" android:enabled="true"/>
	
	</PreferenceCategory>
	
	
	<PreferenceCategory android:title="Debug">
	    
	    <CheckBoxPreference android:title="Internal Storage" android:summary="use internal project storage" android:key="p_use_internal_storage" android:defaultValue="false"/>
	    
		<CheckBoxPreference android:title="Disable lesson completion" android:key="plessondebug"/>
		
		<EditTextPreference android:title="YouTube Method" android:summary="debug auth method type" android:key="glsauthmethod" android:defaultValue="0" android:enabled="true"/>
		
		
		
	</PreferenceCategory>
</PreferenceScreen>

