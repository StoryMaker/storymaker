    <!-- Liger styles -->

    <style name="EditTextBase" parent="android:Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextLogin" parent="@style/EditTextBase">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardLink">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@drawable/card_link_button_text</item>
        <item name="android:background">@drawable/card_link_button_background</item>
    </style>

    <style name="TextImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/storymaker_highlight</item>
    </style>

    <style name="h1" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="h2" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="h3" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="h6" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="p" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="p_italic" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="p_emphasis" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="caption" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="button" parent="@style/CardText">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="StackTitle" parent="@style/CardText">
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_title_text</item>
    </style>

    <style name="ProgressCard" parent="@style/CardText">
        <item name="android:background">#bbbbbb</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:background">#eeeeee</item>
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- THE FOLLOWING IS MERGED FROM /android-studio/sdk/extras/google/play_apk_expansion/downloader_library/res/values -->

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTextShadow" parent="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">@android:color/background_dark</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@android:color/background_dark</item>
    </style>
    	
</resources>
