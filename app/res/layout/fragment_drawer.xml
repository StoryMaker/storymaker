<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

	<LinearLayout
	    android:layout_width="180dp"
	    android:layout_height="match_parent"
	    android:background="#000000"
	    android:orientation="vertical" >
	    
	    <RelativeLayout
	        android:id="@+id/llLogin"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8sp"
	        android:clickable="true"
	        android:background="@android:color/black"
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/imageViewProfileBg"
	            android:layout_width="fill_parent"
	            android:layout_height="120dp"
	            android:alpha=".7"
	            android:scaleType="centerCrop"
	            android:src="@drawable/profile_bg1" />
	            
	        <TextView
	            android:id="@+id/textViewSignIn"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:fontFamily="sans-serif-condensed"
	            android:layout_marginLeft="8sp"
	        	android:layout_marginBottom="8sp"
	        	android:layout_alignBottom="@id/imageViewProfileBg"
	            android:text="@string/menu_sign_up" 
	            android:textColor="#dddddd"
	            android:textStyle="bold"/>
	            
	        
	        <TextView
	            android:id="@+id/textViewJoinStorymaker"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16sp"
	        	android:layout_marginBottom="8sp"
	        	android:layout_marginLeft="8sp"
	        	android:textSize="14sp"
	        	android:fontFamily="sans-serif-light"
	        	android:layout_above="@id/textViewSignIn"
	            android:text="@string/menu_join_storymaker" 
	            android:textColor="#dddddd"/>
	   
		</RelativeLayout>       
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="4sp"
	        android:text="@string/drawer_quick_capture"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="0sp" >
	
	        <ImageButton
	            android:id="@+id/btnDrawerQuickCaptureVideo"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@android:color/transparent"
	            android:src="@drawable/ic_action_med_video" />
	
	        <ImageButton
	            android:id="@+id/btnDrawerQuickCapturePhoto"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_weight="1"
	            android:background="@android:color/transparent"
	            android:src="@drawable/ic_action_med_photo" />
	
	        <ImageButton
	            android:id="@+id/btnDrawerQuickCaptureAudio"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_weight="1"
	            android:background="@android:color/transparent"
	            android:src="@drawable/ic_action_med_audio" />

	    </LinearLayout>
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <Button
	        android:id="@+id/btnDrawerHome"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_home"
	        android:gravity="left|center_vertical"
	        android:text="@string/title_activity_home"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <Button
	        android:id="@+id/btnDrawerProjects"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_home_projects"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_projects"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <Button
	        android:id="@+id/btnDrawerLessons"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_lessons"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_lessons"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <!-- FIXME: rename btnDrawerAccount to btnDrawerLogin or btnDrawerProfile -->
	
	    <!-- <Button
	        android:id="@+id/btnDrawerAccount"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_preferences"
	        android:gravity="left|center_vertical"
	        android:text="@string/drawer_profile"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" /> -->
	
	    <Button
	        android:id="@+id/btnDrawerAccounts"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_preferences"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_accounts"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <Button
	        android:id="@+id/btnDrawerUploadManager"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_upload"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_uploads"
	        android:textColor="#dddddd"
	        android:visibility="gone" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	    
	    <Button
	        android:id="@+id/btnDrawerSettings"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:drawableLeft="@drawable/ic_nav_media_settings"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_settings"
	        android:textColor="#dddddd" /> 
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	</LinearLayout>

</ScrollView>