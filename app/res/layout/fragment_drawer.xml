	    <Button
	        android:id="@+id/btnDrawerAccounts"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
            android:padding="8dp"
            android:drawablePadding="8dp"
	        android:drawableLeft="@drawable/ic_nav_preferences"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_accounts"
	        android:textColor="#dddddd" />
	
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#33999999" />
	
	    <Button
	        android:id="@+id/btnDrawerUploadManager"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
            android:padding="8dp"
            android:drawablePadding="8dp"
	        android:drawableLeft="@drawable/ic_nav_upload"
	        android:gravity="left|center_vertical"
	        android:text="@string/menu_uploads"
	        android:textColor="#dddddd"
	        android:visibility="gone" />

		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="#33999999" />

		<Button
			android:id="@+id/btnDrawerSettings"
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:padding="8dp"
			android:drawablePadding="8dp"
			android:drawableLeft="@drawable/ic_nav_media_settings"
			android:gravity="left|center_vertical"
